<h1>Listing people</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Skills</th>
      <th>Totalexp</th>
      <th>Tcsexp</th>
      <th>Releventexp</th>
      <th>Allocation</th>
      <th>Interestareas</th>
      <th>Active</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.skills %></td>
        <td><%= person.totalExp %></td>
        <td><%= person.tcsExp %></td>
        <td><%= person.releventExp %></td>
        <td><%= person.Allocation %></td>
        <td><%= person.interestAreas %></td>
        <td><%= person.active %></td>
        <td><%= person.group %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

