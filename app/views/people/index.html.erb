<h1>Listing people</h1>
<ul class="nav nav-tabs" id="myTab">
  <li class="active"><a href="#ActivePeople">Active People</a></li>
  <li><a href="#InactivePeople">Inactive People</a></li>
</ul>

<div id='content' class="tab-content">
      <div class="tab-pane active" id="ActivePeople">
      <div class="container">
        <table class="data">
        <thead>
            <th>Name</th>
            <th>Skills</th>
            <th>Totalexp</th>
            <th>Tcsexp</th>
            <th>Releventexp</th>
            <th>Allocation</th>
            <th>Interestareas</th>
            <th>Active</th>
            <th>Group</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
        </thead>
       
        <% @people.each do |person| %>
          <% if person.active? %>
            <tr>
              <td><%= person.name %></td>
              <td><%= person.skills %></td>
              <td><%= person.totalExp %></td>
              <td><%= person.tcsExp %></td>
              <td><%= person.releventExp %></td>
              <td><%= person.Allocation %></td>
              <td><%= person.interestAreas %></td>
              <td><%= person.active %></td>
              <td><%= Group.find(person.group_id).name %></td>
              <td><%= link_to 'Show', person %></td>
              <td><%= link_to 'Edit', edit_person_path(person) %></td>
              <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>    
          <% end %> 
        </table>

        <br>

        <%= link_to 'New Person', new_person_path %>   | 
        </div>
      </div>
      <div class="tab-pane" id="InactivePeople">
      <div class="container">
        <table class="data">
        <thead>
            <th>Name</th>
            <th>Skills</th>
            <th>Totalexp</th>
            <th>Tcsexp</th>
            <th>Releventexp</th>
            <th>Allocation</th>
            <th>Interestareas</th>
            <th>Active</th>
            <th>Group</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
        </thead>
       
        <% @people.each do |person| %>
          <% if !person.active? %>
            <tr>
              <td><%= person.name %></td>
              <td><%= person.skills %></td>
              <td><%= person.totalExp %></td>
              <td><%= person.tcsExp %></td>
              <td><%= person.releventExp %></td>
              <td><%= person.Allocation %></td>
              <td><%= person.interestAreas %></td>
              <td><%= person.active %></td>
              <td><%= Group.find(person.group_id).name %></td>
              <td><%= link_to 'Show', person %></td>
              <td><%= link_to 'Edit', edit_person_path(person) %></td>
              <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>    
          <% end %> 
        </table>

        <br>

        <%= link_to 'New Person', new_person_path %>   |
        </div>
      </div>
      </div>
    </div>    



<script type="text/javascript">
$('.data').dataTable();
$('#myTab a').click(function (e) {
  e.preventDefault()
  $(this).tab('show')
})
</script>



