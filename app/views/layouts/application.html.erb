<!DOCTYPE html>
<html>
<head>
  <title>StaffingApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
<% if user_signed_in? %>
<div class="collapse navbar-collapse">
	<ul class="nav navbar-nav pull-left">
		<li class="<%= 'active' if current_page?(groups_path) %>"><%= link_to("Groups", groups_path) %></li>
		<li class="<%= 'active' if current_page?(projects_path) %>"><%= link_to("Projects", projects_path) %></li>
		<li class="<%= 'active' if current_page?(people_path) %>"><%= link_to("People", people_path) %></li>
		<li class="<%= 'active' if current_page?(assignments_path) %>"><%= link_to("Assignments", assignments_path) %></li>
	</ul>
</div><!-- /.nav-collapse -->
<% end %> 
<%= yield %>
<% if user_signed_in? %>
<%= link_to("Sign Out", destroy_user_session_path , :method => :delete) %>
<% end %>
</div>
</body>
</html>
